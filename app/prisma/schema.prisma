// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  phone String
  cpf   String @unique
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  category    String
  price       Float
  description String
}
